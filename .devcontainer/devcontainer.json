{
  "name": "Trustworthy App Download Dev Container",
  "dockerComposeFile": "docker-compose.yaml",
  "service": "dev-container",
  "workspaceFolder": "/workspaces/trustworthy-app-download",
  "mounts": [
    {
      "source": "${localEnv:HOME}/.ssh",
      "target": "/home/node/.ssh",
      "type": "bind"
    }
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "rvest.vs-code-prettier-eslint",
        "christian-kohler.path-intellisense",
        "humao.rest-client",
        "ms-azuretools.vscode-docker",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "bradlc.vscode-tailwindcss"
      ]
    }
  },
  "postCreateCommand": "sudo chown node node_modules .pnpm-store apps/frontend/node_modules apps/frontend/.next && sudo chmod +x ./.devcontainer/install.sh && ./.devcontainer/install.sh"
}
